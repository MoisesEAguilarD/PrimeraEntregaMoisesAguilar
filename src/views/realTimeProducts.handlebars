<div>
    <h1>Real time Products</h1>

    <h2>Agregar Nuevo Producto</h2>
    <form id="formNewProduct">
        <input type="text" name="title" placeholder="Ingrese el título del producto" required>
        <input type="text" name="description" placeholder="Ingrese descripción del producto" required>
        <input type="text" name="code" placeholder="Ingrese código del producto" required>
        <input type="number" name="price" placeholder="Ingrese el precio del producto" required>
        <input type="number" name="stock" placeholder="Ingrese el stock del producto" required>
        <input type="text" name="category" placeholder="Ingrese la categoría del producto" required>

        <button type="submit">Enviar</button>
    </form>

    <h2>Lista de Productos</h2>
    <ul id="productsList">
        {{#each products}}
            <li id="product-{{this.id}}"> 
                {{this.title}} - {{this.price}} 
                <button onclick="deleteProduct('{{this.id}}')">Eliminar</button>
            </li>
        {{/each}}
    </ul>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>
